<<append "#convoBox">>
  <<speech "jaylie">>I want to get to know you better.<</speech>>
  <<speech "bert">>That’s not on the menu.<</speech>>
<</append>>
<<run setup.bert_Conversation_Options_Phase0()>>
<</widget>>

:: Bert_OpenShop [widget]
<<widget "Bert_OpenShop">>
<<append "#convoBox">>
  <<speech "jaylie">>What is on the menu?<</speech>>
  <<speech "bert">>Drinks. Prices vary. Try not to spill.<</speech>>
<</append>>
<<run setup.openShop("bert")>> <!-- Custom shop function -->
<</widget>>

:: Bert_CustomDrink [widget]
<<widget "Bert_CustomDrink">>
