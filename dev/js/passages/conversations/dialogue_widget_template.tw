:: PHASE_0 [widget]
<<widget "PHASE_0">>
<<append "#convoBox">>
  <<speech "npc">>This is the Phase 0 intro line — what they say the first time you talk.<</speech>>
<</append>>

<<run setup.NPC_Conversation_Options_Phase0()>>
<</widget>>

:: PHASE_1 [widget]
<<widget "PHASE_1">>
<<append "#convoBox">>
  <<speech "npc">>This is Phase 1 — maybe after you’ve gained some trust or done something important.<</speech>>
<</append>>

<<run setup.NPC_Conversation_Options_Phase1()>>
<</widget>>

:: GENERIC [widget]
<<widget "GENERIC">>
<<append "#convoBox">>
  <<speech "npc">>This is fallback generic dialogue if no other phase applies.<</speech>>
<</append>>

<<run setup.NPC_Conversation_Options_Generic()>>
<</widget>>

:: NPC_FlirtLine [widget]
<<widget "NPC_FlirtLine">>
<<append "#convoBox">>
  <<speech "jaylie">>You look good tonight... distracting, really.<</speech>>
  <<speech "npc">>Flattery works better when you mean it — but I’ll let it slide this time.<</speech>>
<</append>>
<<run setup.NPC_Conversation_Options_Phase1()>>
<</widget>>
