:: StoryInterface {"position":"700,0"}
<!-- =============================
=     Required SugarCube Node    =
============================= -->
<div id="passages"></div>

<!-- =============================
=     Main Visual Structure      =
============================= -->
<div id="background-image"></div>

<div id="text-container">
  <div id="text-backdrop">
    <!-- This will either get populated with dialogue layout OR reattached #dynamic-content -->
  </div>
</div>

<!-- =============================
=        Custom Sidebar         =
============================= -->
<div id="custom-sidebar"></div>

<!-- =============================
=         Overlay Panel          =
============================= -->
<div id="overlay-panel" class="overlay-hidden">
  <div id="overlay-body"></div>
</div>

<!--===============================
=  Conversation Overlay Startup   =
================================-->
<div id="conversation-overlay" class="convo-overlay overlay-hidden">
    <div class="convo-window">
    <img id="convo-avatar" src="" alt="Avatar" />
    <h2 id="convo-npc-name"></h2>
    <div id="convo-npc-style"></div>
    <div id="convo-npc-prompt" class="convo-prompt"></div>

    <div class="convo-choices"></div>
    <div class="convo-actions">
      <!-- Action buttons here -->
    </div>

    <div class="convo-results">
      <p id="convo-summary-gains"></p>
      <p id="convo-summary-rapport"></p>
      <p id="convo-summary-gifts"></p>
    </div>
  </div>
</div>


<!--===============================
=  Crown & Caste Overlay Startup =
================================-->
<div id="crown-and-caste-page" class="overlay-hidden">

  <div id="crown-caste-frame">
    
    <!-- Crown Dice Center Circle -->
    <div id="center-circle">
      <div class="crown-die" id="crown-die-1">?</div>
      <div class="crown-die" id="crown-die-2">?</div>
      <div class="crown-die" id="crown-die-3">?</div>
    </div>

    <!-- Quadrant Player Zones -->
    <div id="top-left" class="player-zone">...</div>
    <div id="top-right" class="player-zone">...</div>
    <div id="bottom-left" class="player-zone">...</div>
    <div id="bottom-right" class="player-zone">...</div>

    <!-- Action Panel -->
    <div id="action-panel">
      <div id="action-title">Your Turn</div>
      <button id="btn-roll">Roll</button>
      <button id="btn-lock">Lock/Unlock</button>
      <button id="btn-chip">Use Chip</button>
      <button id="btn-end">End Turn</button>
    </div>

  </div>

</div>
