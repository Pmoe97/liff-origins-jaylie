:: StoryInterface {"position":"700,0"}
<!-- =============================
=     Required SugarCube Node    =
============================= -->
<div id="passages"></div>

<!-- =============================
=     Main Visual Structure      =
============================= -->
<div id="background-image"></div>

<div id="text-container">
  <div id="text-backdrop">
    <!-- SugarCube will inject content here automatically -->
  </div>
</div>

<!-- =============================
=        Custom Sidebar         =
============================= -->
<div id="custom-sidebar"></div>

<div id="sidebar-toggle">
  <i id="sidebar-arrow" data-lucide="arrow-left"></i>
</div>

<!-- =============================
=         Overlay Panel          =
============================= -->
<div id="overlay-panel" class="overlay-hidden">
  <div id="overlay-body"></div>
</div>

<!--===============================
=  Conversation Overlay Startup   =
================================-->
<div id="conversation-overlay" class="convo-overlay overlay-hidden">
    <div class="convo-window">
    <img id="convo-avatar" src="" alt="Avatar" />
    <h2 id="convo-npc-name"></h2>
    <div id="convo-npc-style"></div>
    <div id="convo-npc-prompt" class="convo-prompt"></div>

    <div class="convo-choices"></div>
    <div class="convo-actions">
      <!-- Action buttons here -->
    </div>

    <div class="convo-results">
      <p id="convo-summary-gains"></p>
      <p id="convo-summary-rapport"></p>
      <p id="convo-summary-gifts"></p>
    </div>
  </div>
</div>
